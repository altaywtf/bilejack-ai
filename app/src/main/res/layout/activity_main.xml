<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:background="@color/background_primary"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- Stats Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@color/surface_color"
            android:elevation="2dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/stats_received"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“© 0"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:fontFamily="monospace" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/very_light_gray"
                android:layout_marginHorizontal="8dp" />

            <TextView
                android:id="@+id/stats_sent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“¤ 0"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:fontFamily="monospace" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/very_light_gray"
                android:layout_marginHorizontal="8dp" />

            <TextView
                android:id="@+id/stats_errors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âŒ 0"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Status Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@color/surface_color"
            android:elevation="2dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/status_gpt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âŒ GPT API"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:fontFamily="monospace" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/very_light_gray"
                android:layout_marginHorizontal="8dp" />

            <TextView
                android:id="@+id/status_network"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âŒ NETWORK"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Restart Service Button -->
            <Button
                android:id="@+id/btn_restart_service"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:text="ðŸ”„ RESTART SERVICE"
                android:textColor="@color/text_primary"
                android:backgroundTint="@color/surface_color"
                android:fontFamily="monospace"
                android:textSize="14sp" />

            <!-- Test GPT Button -->
            <Button
                android:id="@+id/btn_test_gpt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:text="ðŸ§ª TEST GPT CONNECTION"
                android:textColor="@color/text_primary"
                android:backgroundTint="@color/surface_color"
                android:fontFamily="monospace"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_clear_log"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ§¹ CLEAR LOG"
                android:backgroundTint="@color/error_red"
                android:textColor="@color/white"
                android:fontFamily="monospace"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Message History Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MESSAGE HISTORY"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace" />

        <!-- Message List -->
        <ListView
            android:id="@+id/messages_list"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/surface_color"
            android:elevation="2dp"
            android:divider="@color/very_light_gray"
            android:dividerHeight="1dp"
            android:padding="8dp" />

    </LinearLayout>

</ScrollView> 
