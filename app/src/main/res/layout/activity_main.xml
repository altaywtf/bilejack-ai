<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="56dp"
        android:paddingBottom="40dp">

        <!-- Stats Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:background="@color/surface_color"
            android:elevation="2dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/stats_received"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“© 0"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:fontFamily="monospace" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/border_subtle"
                android:layout_marginHorizontal="8dp" />

            <TextView
                android:id="@+id/stats_sent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“¤ 0"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:fontFamily="monospace" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/border_subtle"
                android:layout_marginHorizontal="8dp" />

            <TextView
                android:id="@+id/stats_errors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âŒ 0"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Status Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:background="@color/surface_color"
            android:elevation="2dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/status_llm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âŒ LLM API"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:fontFamily="monospace" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/border_subtle"
                android:layout_marginHorizontal="8dp" />

            <TextView
                android:id="@+id/status_network"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âŒ NETWORK"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <!-- Restart Service Button -->
            <Button
                android:id="@+id/btn_restart_service"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:text="ðŸ”„ RESTART SERVICE"
                android:textColor="@color/text_primary"
                android:backgroundTint="@color/surface_hover"
                android:fontFamily="monospace"
                android:textSize="14sp" />

            <!-- Test LLM Button -->
            <Button
                android:id="@+id/btn_test_llm"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:text="ðŸ§ª TEST LLM CONNECTION"
                android:textColor="@color/text_primary"
                android:backgroundTint="@color/surface_hover"
                android:fontFamily="monospace"
                android:textSize="14sp" />



        </LinearLayout>

        <!-- Whitelist Management Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:background="@color/surface_color"
            android:elevation="2dp"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ALLOWED PHONE NUMBERS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/whitelist_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="monospace"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/edit_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Enter phone number..."
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:background="@color/background_primary"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_add_number"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="âž• ADD"
                    android:textColor="@color/text_primary"
                    android:backgroundTint="@color/surface_hover"
                    android:fontFamily="monospace"
                    android:textSize="12sp"
                    android:minWidth="80dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_manage_whitelist"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="ðŸ“‹ MANAGE LIST"
                    android:textColor="@color/text_primary"
                    android:backgroundTint="@color/surface_hover"
                    android:fontFamily="monospace"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_clear_whitelist"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="ðŸ—‘ï¸ CLEAR ALL"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/error_red"
                    android:fontFamily="monospace"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- LLM Model Selection Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:background="@color/surface_color"
            android:elevation="2dp"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ¤– AI MODEL"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/model_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="monospace"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btn_select_model"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ”„ SELECT MODEL"
                android:textColor="@color/text_primary"
                android:backgroundTint="@color/surface_hover"
                android:fontFamily="monospace"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Message History Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/surface_color"
            android:elevation="2dp"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“œ MESSAGE HISTORY"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp"
                android:fontFamily="monospace" />

            <!-- Message List -->
            <ListView
                android:id="@+id/messages_list"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/gray2"
                android:divider="@color/border_subtle"
                android:dividerHeight="1dp"
                android:padding="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Clear Message History Button -->
            <Button
                android:id="@+id/btn_clear_log"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ—‘ï¸ CLEAR MESSAGE HISTORY"
                android:backgroundTint="@color/error_red"
                android:textColor="@color/white"
                android:fontFamily="monospace"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView> 
