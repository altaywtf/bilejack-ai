<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Radix UI Gray Scale (Dark Theme) -->
    <!-- Steps 1-2: App backgrounds -->
    <color name="gray1">#111111</color> <!-- App background -->
    <color name="gray2">#191919</color> <!-- Subtle background -->
    
    <!-- Steps 3-5: Component backgrounds -->
    <color name="gray3">#222222</color> <!-- UI element background -->
    <color name="gray4">#2a2a2a</color> <!-- Hovered UI element background -->
    <color name="gray5">#313131</color> <!-- Active/Selected UI element background -->
    
    <!-- Steps 6-8: Borders -->
    <color name="gray6">#3a3a3a</color> <!-- Subtle borders and separators -->
    <color name="gray7">#484848</color> <!-- UI element border and focus rings -->
    <color name="gray8">#606060</color> <!-- Hovered UI element border -->
    
    <!-- Steps 9-10: Solid backgrounds -->
    <color name="gray9">#6e6e6e</color> <!-- Solid backgrounds -->
    <color name="gray10">#7b7b7b</color> <!-- Hovered solid backgrounds -->
    
    <!-- Steps 11-12: Text -->
    <color name="gray11">#b4b4b4</color> <!-- Low-contrast text -->
    <color name="gray12">#eeeeee</color> <!-- High-contrast text -->
    
    <!-- Semantic Colors -->
    <color name="white">#ffffff</color>
    <color name="black">#000000</color>
    
    <!-- Status Colors (Radix Red and Green scales) -->
    <color name="success_green">#46a758</color> <!-- Green 9 -->
    <color name="error_red">#e5484d</color> <!-- Red 9 -->
    <color name="warning_orange">#f76b15</color> <!-- Orange 9 -->
    
    <!-- Semantic Mappings -->
    <color name="background_primary">@color/gray1</color>
    <color name="background_secondary">@color/gray2</color>
    <color name="surface_color">@color/gray3</color>
    <color name="surface_hover">@color/gray4</color>
    <color name="surface_active">@color/gray5</color>
    
    <color name="border_subtle">@color/gray6</color>
    <color name="border_interactive">@color/gray7</color>
    <color name="border_focus">@color/gray8</color>
    
    <color name="text_primary">@color/gray12</color>
    <color name="text_secondary">@color/gray11</color>
    <color name="text_disabled">@color/gray9</color>
    
    <!-- Legacy aliases for compatibility -->
    <color name="dark_gray">@color/gray2</color>
    <color name="medium_gray">@color/gray4</color>
    <color name="light_gray">@color/gray6</color>
    <color name="very_light_gray">@color/gray8</color>
    <color name="off_white">@color/gray11</color>
    <color name="accent_primary">@color/white</color>
    <color name="accent_secondary">@color/gray10</color>
</resources>