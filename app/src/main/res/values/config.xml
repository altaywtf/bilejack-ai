    <string name="openrouter_available_models">openai/gpt-4.1,openai/gpt-4.1-mini,perplexity/sonar,perplexity/sonar-pro,perplexity/sonar-reasoning,openai/gpt-4o-search-preview,openai/gpt-4o-mini-search-preview,x-ai/grok-4,openai/gpt-4o</string>
